  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "max_blocks": 3,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Section ttitle goes here",
      "label": "Section Title"
    },
    {
      "type": "text",
      "id": "video_message",
