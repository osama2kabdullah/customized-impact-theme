{% style %}
  .splide-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
  }
  .splide-{{ section.id }} .splide__arrows{
      position: unset;
      display: flex;
      gap: 2rem;
  }
  .splide-{{ section.id }} .text-content {
      display: flex;
      gap: 2rem;
      flex-direction: column;
      justify-content: space-between;
      padding-top: 3rem;
  }
  .splide-{{ section.id }} .splide__arrow {
    border: 1px solid;
    position: unset;
    transform: unset;
    height: 50px;
    width: 50px;
    border-radius: 50px;
  }
  @media (max-width: 768px) {
    .splide-{{ section.id }} {
      display: grid;
      gap: 2rem;
      grid-template-columns: repeat(1, 1fr);
    }
  }
{% endstyle %}

