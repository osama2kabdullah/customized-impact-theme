<div class="custom-one-half-slider">
  <div class="splide splide-{{ section.id }}" aria-label="Splide Basic HTML Example">
    
    <div class="text-content">
      <div class="sectin-texts">
        <div class="star">
          {%- for i in (1..section.settings.star) -%}
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="#af5a3c" class="bi bi-star-fill" viewBox="0 0 16 16">
              <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
            </svg>
          {% endfor %}
        </div>
        <br>
        <div class="section-title">
          {{ section.settings.title }}
        </div>
      </div>
      <div class="splide__arrows"></div>
    </div>

    <div class="splide__track">
      <div class="splide__list">
        {% for block in section.blocks %}
          <div class="splide__slide">
            {% case block.type %}
              {% when 'image' %}
                {{
                  block.settings.image
                  | image_url: width: 400, height: 500
                  | image_tag: alt: block.settings.image.alt, style: 'border-radius: 10px;width: 100%; height:100%;'
                }}
              {% when 'video' %}
                {{
                  block.settings.video
                  | video_tag:
                    image_size: '400x',
                    autoplay: true,
                    loop: true,
                    muted: true,
                    controls: true,
                    style: 'width: 100%;height: 100%;'
                }}
              {% when 'card' %}
                <div class="one-half-slider-card" style="">
                  {{
                    block.settings.card_image
                    | image_url: width: 300, height: 300
                    | image_tag: alt: block.settings.card_image.alt, style: 'width: 100%;border-radius: 10px;'
                  }}
                  <div>{{ block.settings.paragraph }}</div>
                </div>
            {% endcase %}
          </div>
        {% endfor %}
      </div>
    </div>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    var splide = new Splide('.splide-{{ section.id }}', {
      type: 'loop',
      perPage: 2,
      perMove: 1,
      drag: false,
      gap: '1rem',
      breakpoints: {
        768: {
          perPage: 2,
        },
        468: {
          perPage: 1,
        },
      },
    });
    splide.mount();
  });
</script>

{% schema %}
{
  "name": "Custom Rating slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "range",
      "id": "star",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "Rating star",
      "default": 5
    },
    {
      "type": "richtext",
      "id": "title",
      "default": "<h1>Plus de 15000 clients en moins de 6 mois !</h1>",
      "label": "Section title"
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "video",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "A Shopify-hosted video"
        }
      ]
    },
    {
      "type": "image",
      "name": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "card",
      "name": "card",
      "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "paragraph",
          "label": "Paragraph"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Rating slider"
    }
  ]
}
{% endschema %}
