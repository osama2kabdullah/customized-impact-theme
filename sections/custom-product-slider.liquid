<div class="custom-product-slider-container">

  <h2 style="text-align: center; padding-bottom: 40px;">{{ section.settings.title }}</h2>

  <div class="swiper swiper-{{ section.id }}">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {% assign Collection = section.settings.collection %}
      {% if section.settings.collection != blank %}
        {% for Product in Collection.products limit: section.settings.products_per_page %}
          <div class="swiper-slide">
            {%- render 'custom-product-card', product: Product, show_badges: true -%}
          </div>
        {% endfor %}
      {% else %}
        {%- for i in (1..section.settings.products_per_page) -%}
          <div class="swiper-slide">
            <div class="card">
              <div class="card-image">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
              <div class="card-body">
                <p class="price">9,99€</p>
                <h4>Citron Gingembre</h4>
                <p class="desc">Sans sucres ajoutés</p>
                <div>
                  <button class="card-btn">Ajouter aupanier</button>
                </div>
                <div class="card-icons">
                  <img src="./assets/fruits.png" alt="">
                  <img src="./assets/fruits.png" alt="">
                  <img src="./assets/fruits.png" alt="">
                  <img src="./assets/fruits.png" alt="">
                  <img src="./assets/fruits.png" alt="">
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

    <div class="swiper-controller">
      <button class="button-prev">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
        </svg>
      </button>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>

      <button class="button-next">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const swiper = new Swiper('.swiper-{{ section.id }}', {
      speed: 400,
      spaceBetween: 100,
      slidesPerView: 1,
      loop: true,
      spaceBetween: 10,
      navigation: {
        nextEl: '.button-next',
        prevEl: '.button-prev',
      },
      pagination: {
        el: '.swiper-pagination',
        type: 'bullets',
      },
      breakpoints: {
        668: {
          slidesPerView: 3,
          spaceBetween: 30,
          centeredSlides: true,
        },
        1200: {
          slidesPerView: 4,
          spaceBetween: 30,
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Custom product slider",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "Vos goûts préférés"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "number",
      "id": "products_per_page",
      "label": "Products per page",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Custom product slider"
    }
  ]
}
{% endschema %}
